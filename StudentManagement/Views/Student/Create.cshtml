@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row" ng-init="InitCreate()" ng-controller="Student.IndexController">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> Last Name</label>
                <input ng-model="Student.lastName"  class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label"> First Mid Name</label>
                <input ng-model="Student.firstMidName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Phone</label>
                <input ng-model="Student.phone" class="form-control" />
            </div>
            <div class="form-group">
                <input ng-click="CreateStudent()" value="Create" class="btn btn-primary" />
            </div>
    </div>
</div>
<div>
    <a href="./Student">Back to List</a>
</div>